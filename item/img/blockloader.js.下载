function showLoader()
{
    $.blockUI({
        message: '<h1>宜佳购物提示您，数据正在运行中，请等待......</h1>',
        css: {
            border: 'none',
            padding: '15px',
            backgroundColor: '#000',
            '-webkit-border-radius': '10px',
            '-moz-border-radius': '10px',
            opacity: .5,
            color: '#fff'
        }
    });
}

function hideLoader()
{
    setTimeout($.unblockUI, 500);
}